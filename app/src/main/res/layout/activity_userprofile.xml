<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".UserProfileActivity">

        <androidx.cardview.widget.CardView
            android:id="@+id/imageView1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/img1"></ImageView>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="follow"
            android:textSize="20dp"
            android:backgroundTint="#E6E6FA"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:cardCornerRadius="50dp"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:backgroundTint="#E6E6FA"
            android:text="Messages"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/button1"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:cardCornerRadius="50dp"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:backgroundTint="#E6E6FA"
            android:text="Tutor"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/button2"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:cardCornerRadius="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="210dp"
            android:layout_marginTop="60dp"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="90dp"
            android:text="Posts"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageView1"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="270dp"
            android:layout_marginTop="60dp"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="250dp"
            android:layout_marginTop="90dp"
            android:text="Followers"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageView1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="345dp"
            android:layout_marginTop="60dp"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="330dp"
            android:layout_marginTop="90dp"
            android:text="Following"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageView1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="230dp"
            android:background="@drawable/img2" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_marginTop="230dp"
            android:layout_toRightOf="@id/imageView2"
            android:background="@drawable/img3"/>
        <ImageView
            android:id="@+id/image_added"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="230dp"
            android:layout_toRightOf="@id/imageView3"
            android:background="@drawable/img4" />
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_marginTop="380dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/imageView7"
            android:background="@drawable/img5"/>
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="380dp"
            android:background="@drawable/img6" />
        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_marginTop="380dp"
            android:layout_toRightOf="@id/imageView2"
            android:background="@drawable/img7"/>
        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_marginTop="530dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/imageView7"
            android:background="@drawable/img8"/>
        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="530dp"
            android:background="@drawable/img9" />
        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_marginTop="530dp"
            android:layout_toRightOf="@id/imageView2"
            android:background="@drawable/img10"/>

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="685dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/img13" />
        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="685dp"
            android:layout_marginLeft="180dp"
            android:background="@drawable/img11"/>
        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="685dp"
            android:layout_marginLeft="320dp"
            android:background="@drawable/img12"/>


    </RelativeLayout>


</ScrollView>