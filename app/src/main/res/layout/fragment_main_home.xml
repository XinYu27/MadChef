<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Main_home">

    <TextView
        android:id="@+id/check_text"
        android:layout_width="265dp"
        android:layout_height="67dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/inika"
        android:text="Check out \nthis cuisine Today!"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Eat_text"
        android:layout_width="269dp"
        android:layout_height="47dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inika"
        android:textColor="@color/black"
        android:text="What are you eating ?"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />


    <ImageView
        android:id="@+id/random_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/ic_random"
        app:layout_constraintStart_toEndOf="@+id/check_text"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_text">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/food1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:drawableTop="@android:drawable/ic_dialog_info"
                android:text="Button\n30 min" />

            <Button
                android:id="@+id/food2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:drawableTop="@drawable/ic_home"
                android:text="Button\n20min" />

            <Button
                android:id="@+id/food3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:drawableTop="@drawable/ic_profile"
                android:text="Button\n20min" />

            <Button
                android:id="@+id/foo4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:drawableTop="@drawable/ic_profile"
                android:text="Button\n8min" />

        </LinearLayout>
    </HorizontalScrollView>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/foodTab"
        android:layout_width="346dp"
        android:layout_height="63dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Eat_text"
        app:tabBackground="@drawable/selector_tab"
        app:tabIndicatorHeight="0dp"
        app:tabTextAppearance="@style/TabTextStyle"
        app:tabTextColor="@color/black">


        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Breakfast"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="417dp" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lunch"
            tools:layout_editor_absoluteX="109dp"
            tools:layout_editor_absoluteY="560dp" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dinner"
            tools:layout_editor_absoluteX="252dp"
            tools:layout_editor_absoluteY="432dp" />

    </com.google.android.material.tabs.TabLayout>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/foodsuggest"
        android:layout_width="346dp"
        android:layout_height="217dp"
        android:layout_below="@+id/foodTab"
        android:background="@drawable/viewpager_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodTab" />


</androidx.constraintlayout.widget.ConstraintLayout>
