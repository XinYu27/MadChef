        </LinearLayout>
    </HorizontalScrollView>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/foodTab"
        android:layout_width="346dp"
        android:layout_height="63dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Eat_text"
        app:tabBackground="@drawable/selector_tab"
        app:tabIndicatorHeight="0dp"
        app:tabTextAppearance="@style/TabTextStyle"
        app:tabTextColor="@color/black">


        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Breakfast"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="417dp" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lunch"
            tools:layout_editor_absoluteX="109dp"
            tools:layout_editor_absoluteY="560dp" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dinner"
            tools:layout_editor_absoluteX="252dp"
            tools:layout_editor_absoluteY="432dp" />

    </com.google.android.material.tabs.TabLayout>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/foodsuggest"
        android:layout_width="346dp"
        android:layout_height="217dp"
        android:layout_below="@+id/foodTab"
        android:background="@drawable/viewpager_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodTab" />


